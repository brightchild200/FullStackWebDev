<%- include("partials/header") %>

<h2 class="text-center mb-4">Latest Posts</h2>

<div class="row">
  <% if (posts.length === 0) { %>
    <p class="text-center text-muted">No posts yet. <a href="/compose">Create one!</a></p>
  <% } else { %>
    <% posts.forEach(function(post){ %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h5 class="card-title"><a href="/posts/<%= post.title %>" class="text-decoration-none"><%= post.title %></a></h5>
            <p class="card-text text-muted"><%= post.content.substring(0, 120) %>...</p>
            <a href="/posts/<%= post.title %>" class="btn btn-sm btn-primary">Read More</a>
          </div>
        </div>
      </div>
    <% }) %>
  <% } %>
</div>

<%- include("partials/footer") %>
